<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/de.devmob.androlib.customfont.demo"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
            
    android:paddingBottom="@dimen/default_vertical_margin"
    android:paddingLeft="@dimen/default_horizontal_margin"
    android:paddingRight="@dimen/default_horizontal_margin"
    android:paddingTop="@dimen/default_vertical_margin"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"

	    android:orientation="vertical"
	    
	    tools:context=".MainActivity" >
	
	    <!-- Intro default regular -->
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        
	        android:textColor="@color/text_darkgrey"
	        android:textSize="@dimen/font_med_size"
	        
	        android:text="@string/text_default_regular"
	        />
	
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        
	        android:layout_marginLeft="@dimen/example_horizontal_margin"
	        android:paddingBottom="@dimen/default_vertical_margin"
	        
	        android:textColor="@color/text_darkgrey"
	        android:textSize="@dimen/font_large_size"
	        
	        android:text="@string/text_example"
	        />
	
	    <!-- Intro default bold -->
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        
	        android:textColor="@color/text_darkgrey"
	        android:textSize="@dimen/font_med_size"
	        
	        android:text="@string/text_default_bold"
	        />
	
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        
	        android:layout_marginLeft="@dimen/example_horizontal_margin"
	        android:paddingBottom="@dimen/default_vertical_margin"
	        
	        android:textStyle="bold"
	        android:textColor="@color/text_darkgrey"
	        android:textSize="@dimen/font_large_size"
	        
	        android:text="@string/text_example"
	        />


        <!-- Intro custom regular -->
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        
	        android:textColor="@color/text_darkgrey"
	        android:textSize="@dimen/font_med_size"
	        
	        android:text="@string/text_style_regular"
	        />
	    
	    <de.devmob.androlib.customfont.CustomFontTextView
	
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        
	        android:layout_marginLeft="@dimen/example_horizontal_margin"
	        android:paddingBottom="@dimen/default_vertical_margin"
	        
	        app:fontname="bowhouse_regular.ttf"
	        android:textColor="@color/text_darkgrey"
	        android:textSize="@dimen/font_large_size"
	        
	        android:text="@string/text_example" 
	        />

        <!-- Intro custom bolded -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:textColor="@color/text_darkgrey"
            android:textSize="@dimen/font_med_size"
            
            android:text="@string/text_style_bolded"
            />
        
        <de.devmob.androlib.customfont.CustomFontTextView
    
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="@dimen/example_horizontal_margin"
            android:paddingBottom="@dimen/default_vertical_margin"
            
            app:fontname="bowhouse_regular.ttf"
            android:textStyle="bold"
            android:textColor="@color/text_darkgrey"
            android:textSize="@dimen/font_large_size"
            
            android:text="@string/text_example" 
            />
        
        <!-- Intro custom black -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:textColor="@color/text_darkgrey"
            android:textSize="@dimen/font_med_size"
            
            android:text="@string/text_style_black"
            />
    
        <de.devmob.androlib.customfont.CustomFontTextView
    
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="@dimen/example_horizontal_margin"
            android:paddingBottom="@dimen/default_vertical_margin"
            
            app:fontname="bowhouse_black.ttf"
            android:textColor="@color/text_darkgrey"
            android:textSize="@dimen/font_large_size"
            
            android:text="@string/text_example" 
            />
    </LinearLayout>
</ScrollView>